<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.association :movie, label: "Film", prompt: "Choisir un film", input_html: { class: "form-select" } %>
  <%= f.input :comment, label: "Commentaire (optionnel)", input_html: { class: "form-control" } %>
  <%= f.submit "Ajouter", class: "btn btn-success mt-3" %>
<% end %>

