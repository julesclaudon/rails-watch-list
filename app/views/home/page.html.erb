<div class="row align-items-center py-5">
  <div class="col-md-7">
    <h1 class="fw-bold display-5">Bienvenue sur WatchList</h1>
    <p class="lead text-muted">Crée tes listes de films, ajoute des signets, organise ta cinémathèque.</p>
    <%= link_to lists_path, class: "btn btn-primary btn-lg me-2" do %>
      Voir mes listes
    <% end %>
    <%= link_to new_list_path, class: "btn btn-outline-secondary btn-lg" do %>
      Créer une liste
    <% end %>
  </div>
  <div class="col-md-5 text-center">
    <div class="card shadow-sm border-0">
      <div class="p-4">
        <i class="fa-solid fa-film fa-4x text-muted"></i>
        <p class="mt-3 text-muted">Commence en créant ta première liste.</p>
      </div>
    </div>
  </div>
</div>

<hr>

<h3 class="mt-4 mb-3">Dernières listes</h3>
<div class="row g-4">
  <% @lists.each do |list| %>
    <div class="col-12 col-md-6 col-lg-4">
      <%= render partial: "lists/card", locals: { list: list } %>
    </div>
  <% end %>
</div>

