<div class="container mt-5">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold text-dark">Mes listes</h1>
    <%= link_to new_list_path, class: "btn btn-primary d-flex align-items-center gap-1 px-4" do %>
      <i class="fa-solid fa-plus"></i> Nouvelle liste
    <% end %>
  </div>

  <div class="row g-4">
    <% @lists.each do |list| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm rounded overflow-hidden position-relative"
             style="transition: transform 0.3s;"
             onmouseover="this.style.transform='translateY(-5px)'; this.style.boxShadow='0 0.75rem 1.5rem rgba(0,0,0,.15)';"
             onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 .125rem .25rem rgba(0,0,0,.075)';">

          <% if list.photo.attached? %>
            <div class="position-relative">
              <%= image_tag url_for(list.photo),
                            class: "card-img-top",
                            style: "height: 180px; object-fit: cover;" %>
              <div class="position-absolute bottom-0 start-0 w-100 bg-dark bg-opacity-25 p-2 d-flex justify-content-between align-items-center">
                <span class="fw-bold text-white"><%= list.name %></span>
                <span class="badge bg-primary"><%= list.bookmarks.count %> films</span>
              </div>
            </div>
          <% else %>
            <h3 class="fw-semibold p-3 text-center"><%= list.name %></h3>
          <% end %>

          <div class="card-body d-flex flex-column mt-auto">
            <div class="d-flex justify-content-between">
              <%= link_to list, class: "btn btn-outline-primary btn-sm d-flex align-items-center gap-1" do %>
                <i class="fa-solid fa-eye"></i> Voir
              <% end %>
              <%= link_to list_path(list),
                  data: { turbo_method: :delete, turbo_confirm: "Supprimer cette liste ?" },
                  class: "btn btn-outline-danger btn-sm d-flex align-items-center gap-1" do %>
                <i class="fa-solid fa-trash"></i> Supprimer
              <% end %>
            </div>
          </div>

        </div>
      </div>
    <% end %>
  </div>

</div>
