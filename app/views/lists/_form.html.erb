<%= simple_form_for @list, html: { multipart: true } do |f| %>
  <div class="mb-3">
    <%= f.input :name, label: "Nom de la liste", input_html: { class: "form-control" } %>
  </div>

  <div class="mb-3">
    <%= f.input :photo, as: :file, label: "Ajouter une image Ã  la liste" %>
    <% if @list.photo.attached? %>
      <div class="mt-2">
        <%= image_tag @list.photo.variant(resize_to_limit: [200, 200]), class: "img-thumbnail" %>
      </div>
    <% end %>
  </div>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
