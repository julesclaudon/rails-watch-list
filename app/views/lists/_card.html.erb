<div class="card h-100 shadow-sm rounded-3 overflow-hidden">
  <% if list.photo.attached? %>
    <%= link_to list do %>
      <%= image_tag list.photo_variant(width: 800, height: 500).processed, class: "card-img-top", style: "height:180px; object-fit:cover;" %>
    <% end %>
  <% else %>
    <div class="bg-secondary d-flex align-items-center justify-content-center text-white" style="height: 180px;">
      <i class="fa-solid fa-image fa-2x opacity-50"></i>
    </div>
  <% end %>

  <div class="card-body d-flex flex-column">
    <h5 class="card-title mb-2"><%= link_to list.name, list, class: "text-decoration-none text-dark stretched-link" %></h5>
    <p class="text-muted mb-3"><i class="fa-solid fa-film me-1"></i> <%= list.bookmarks.count %> films</p>

    <div class="mt-auto d-flex justify-content-between">
      <%= link_to list, class: "btn btn-outline-primary btn-sm" do %>
        <i class="fa-solid fa-eye me-1"></i> Voir
      <% end %>

      <%= link_to list_path(list), data: { turbo_method: :delete, turbo_confirm: "Supprimer cette liste ?" }, class: "btn btn-outline-danger btn-sm" do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
    </div>
  </div>
</div>
