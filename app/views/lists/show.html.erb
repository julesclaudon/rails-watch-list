<div class="container mt-4">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold"><%= @list.name %></h1>

    <%= link_to new_list_bookmark_path(@list), class: "btn btn-success px-4" do %>
      <i class="fa-solid fa-plus me-1"></i> Ajouter un signet
    <% end %>
  </div>

  <h2 class="fw-semibold mb-3">Signets</h2>

  <% @list.bookmarks.each do |bookmark| %>
    <div class="card shadow-sm p-4 mb-4">

      <div class="d-flex justify-content-between">

        <div>
          <h3 class="mb-2"><%= bookmark.movie.title %></h3>
          <p class="text-muted"><%= bookmark.comment %></p>
           <img src="<%= bookmark.movie.poster_url %>" alt="Movie">
        </div>

        <%= link_to bookmark_path(bookmark),
                    data: { turbo_method: :delete, turbo_confirm: "Supprimer ce signet ?" },
                    class: "btn btn-danger" do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>

      </div>

    </div>
  <% end %>

  <%= link_to lists_path, class: "btn btn-secondary mt-4" do %>
    <i class="fa-solid fa-arrow-left me-1"></i> Retour
  <% end %>

</div>
