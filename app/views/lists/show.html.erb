<%= link_to lists_path, class: "btn btn-outline-secondary mb-3 d-inline-flex align-items-center gap-1" do %>
  <i class="fa-solid fa-arrow-left me-1"></i> Retour
<% end %>

<div class="card mb-4 shadow-sm rounded-3 overflow-hidden">
  <% if @list.photo.attached? %>
    <%= image_tag url_for(@list.photo), class: "w-100", style: "height: 320px; object-fit: cover;" %>
  <% else %>
    <div class="bg-secondary" style="height: 320px;"></div>
  <% end %>

  <div class="card-body">
    <div class="d-flex justify-content-between align-items-start mb-3">
      <div>
        <h1 class="fw-bold mb-1"><%= @list.name %></h1>
        <p class="text-muted mb-0"><%= pluralize(@list.bookmarks.count, "film") %></p>
      </div>

      <div class="d-flex align-items-center gap-2">
        <%= link_to new_list_bookmark_path(@list), class: "btn btn-success d-inline-flex align-items-center gap-2" do %>
          <i class="fa-solid fa-plus"></i> Ajouter un film
        <% end %>

        <%= link_to edit_list_path(@list), class: "btn btn-outline-secondary d-inline-flex align-items-center gap-2" do %>
          <i class="fa-solid fa-pen"></i> Modifier
        <% end %>
      </div>
    </div>

    <h3 class="mb-3">Films</h3>

    <% if @list.bookmarks.any? %>
      <div class="row g-3">
        <% @list.bookmarks.each do |bookmark| %>
          <div class="col-12 col-md-6">
            <div class="card h-100 shadow-sm">
              <div class="row g-0 align-items-center">
                <div class="col-4">
                  <% if bookmark.movie.poster_url.present? %>
                    <%= image_tag bookmark.movie.poster_url, class: "img-fluid rounded-start", style: "height:140px; object-fit:cover;" %>
                  <% else %>
                    <div class="bg-light d-flex align-items-center justify-content-center" style="height:140px;">
                      <i class="fa-solid fa-film text-muted fa-2x"></i>
                    </div>
                  <% end %>
                </div>
                <div class="col-8">
                  <div class="card-body">
                    <h5 class="card-title mb-1"><%= bookmark.movie.title %></h5>
                    <p class="card-text text-muted mb-2"><%= truncate(bookmark.comment.to_s, length: 140) %></p>

                    <div class="d-flex justify-content-end gap-2">
                      <%= link_to edit_bookmark_path(bookmark), class: "btn btn-outline-secondary btn-sm d-inline-flex align-items-center gap-1" do %>
                        <i class="fa-solid fa-pen"></i>
                      <% end %>

                      <%= link_to bookmark_path(bookmark),
                          data: { turbo_method: :delete, turbo_confirm: "Supprimer ce signet ?" },
                          class: "btn btn-outline-danger btn-sm d-inline-flex align-items-center gap-1" do %>
                        <i class="fa-solid fa-trash"></i>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-muted">Aucun film dans cette liste pour le moment.</p>
    <% end %>

  </div>
</div>
