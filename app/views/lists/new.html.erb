<div class="container mt-5">

  <div class="card shadow-sm p-5 mx-auto" style="max-width: 600px;">
    <h1 class="fw-bold mb-4">Créer une liste</h1>

    <%= simple_form_for(@list) do |f| %>
      <%= f.input :name, label: "Nom de la liste" %>
      <%= f.submit "Créer", class: "btn btn-primary w-100 mt-3" %>
    <% end %>

    <%= link_to lists_path, class: "btn btn-secondary w-100 mt-3" do %>
      <i class="fa-solid fa-arrow-left me-1"></i> Retour
    <% end %>
  </div>

</div>
