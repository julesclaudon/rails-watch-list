<div class="container mt-5" style="max-width: 600px;">

  <h1 class="fw-bold mb-4 text-center">Créer une nouvelle liste</h1>

  <div class="card shadow-sm p-4">
    <%= simple_form_for(@list, html: { multipart: true }) do |f| %>

      <%= f.input :name, label: "Nom de la liste", input_html: { class: "form-control" } %>

      <%= f.input :photo, as: :file, label: "Photo de la liste", input_html: { class: "form-control" } %>

      <%= f.submit "Créer la liste", class: "btn btn-primary w-100 mt-3" %>

    <% end %>

<div class="mt-3">
  <%= link_to "Retour", lists_path, class: "btn btn-secondary d-inline-flex" %>
</div>
  </div>

</div>
