<% if list.photo.attached? %>
  <%= image_tag list.photo.variant(resize_to_limit: [400, 250]),
                class: "card-img-top img-fluid" %>
<% end %>

<div class="card-body d-flex flex-column">
  <h3 class="fw-semibold mb-2">
    <%= link_to list.name, list, class: "text-decoration-none text-dark" %>
  </h3>

  <p class="text-muted mb-3">
    <i class="fa-solid fa-film me-1"></i>
    <%= list.bookmarks.count %> films
  </p>

  <div class="mt-auto d-flex justify-content-between align-items-center">
    <%= link_to list, class: "btn btn-outline-primary btn-sm d-flex align-items-center gap-1" do %>
      <i class="fa-solid fa-eye"></i> Voir
    <% end %>

    <%= link_to list_path(list),
        data: { turbo_method: :delete, turbo_confirm: "Supprimer cette liste ?" },
        class: "btn btn-outline-danger btn-sm d-flex align-items-center gap-1" do %>
      <i class="fa-solid fa-trash"></i> Supprimer
    <% end %>
  </div>
</div>
